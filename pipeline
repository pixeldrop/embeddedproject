pipeline {
    agent {
        docker { image 'praqma/native-gradle' }
    }
    
    stages {

        stage ('Build'){
            steps{
                sh "./gradlew publishToMavenLocal"
            }
        }

        stage ('Results'){
            steps{
                archiveArtifacts 'build/distributions/*.zip'
            }
        }
    }
}
